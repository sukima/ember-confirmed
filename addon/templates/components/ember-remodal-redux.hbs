{{#ember-remodal
    forService=true
    modalClasses=modalClasses
    name=modalName
    title=title
    closeOnOutsideClick=closeOnOutsideClick
    closeOnEscape=closeOnEscape
    closeOnCancel=closeOnCancel
    closeOnConfirm=closeOnConfirm
    cancelButton=cancelButton
    cancelButtonClasses=cancelButtonClasses
    confirmButton=confirmButton
    confirmButtonClasses=confirmButtonClasses
    modifier=modifier
    hashTracking=hashTracking
    onOpen=(action "opened")
    onConfirm=(action "resolve" "confirm")
    onCancel=(action "resolve" "cancel")
    onClose=(action "resolve" "cancel")
    as |modal|}}
  {{#if showModal}}
    {{yield modal (action "resolve")}}
  {{/if}}
{{/ember-remodal}}
