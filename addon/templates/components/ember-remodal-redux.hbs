{{#ember-remodal
    forService=true
    class=class
    name=modalName
    title=title
    onOpen=(action "opened")
    onConfirm=(action "resolve" "confirm")
    onCancel=(action "resolve" "cancel")
    as |modal|}}
  {{#if showModal}}
    {{yield modal (action "resolve")}}
  {{/if}}
{{/ember-remodal}}
